<div class="row-fluid">
  <div class="col-sm-3">
  </div>
  <div class="col-sm-6">
    <div class="table-responsive">
      <table class="table table-hover">
		    <tr>
		      <td><strong> Name</strong></td>
		      <td><%=@contact.persons.pluck(:name).join(",")%></td>
		    </tr>
		    <tr>
		      <td><strong> Phone: </strong></td>
		      <td><%= @contact.phones.pluck(:phonenumber).join(",") %></td>
		    </tr>
		    <tr>
		      <td><strong> Emails: </strong></td>
		      <td><%= @contact.emails.pluck(:email_url).join(",") %></td>
		    </tr>
      </table>
    </div>
  <div class="col-sm-6">
    <%= button_to "delete", contact_path, method: :delete, class: "btn btn-primary" %>
  </div>
</div>