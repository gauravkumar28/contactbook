<%= simple_form_for @contact, class: 'form-horizontal' do |f| %>
  <% if @contact.errors.any? %>
    <ul>
	  <% @contact.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	</ul>
	<% end %>
  <div class="form-group"> 
    <%= f.fields_for(@contact.persons) do |person| %>
      <%= person.input :name, required: true, class: 'form-control' %>
    <% end %>
  </div>
  <div class="form-group"> 
   <% @contact.phones.each do |phone| %>
      <%= render partial: "form" , phone: phone%>
    <% end %>
  </div>
  <div class="form-group"> 
    <%= f.fields_for(@contact.emails) do |email| %>
      <%= email.input  :email_url, required: true , class: 'form-control'%>
    <% end %>
  </div>
  <div class="form-group"> 
    <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
